# ==========================================
# ENVIRONMENT VARIABLES - PORTFOLIO SPEKTAKULER
# ==========================================
# Copy this file to .env.local and fill in your values

# ==========================================
# APP CONFIGURATION
# ==========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Your Name Portfolio

# ==========================================
# CONTACT FORM (EmailJS)
# ==========================================
# Get these from https://www.emailjs.com/
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_service_id_here
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_template_id_here
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_public_key_here

# ==========================================
# ANALYTICS (Optional)
# ==========================================
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics (automatic if deployed on Vercel)
# No configuration needed

# ==========================================
# FEATURE FLAGS
# ==========================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_AUDIO=true
NEXT_PUBLIC_ENABLE_3D=true
NEXT_PUBLIC_ENABLE_EASTER_EGGS=true
NEXT_PUBLIC_ENABLE_COMMAND_PALETTE=true

# ==========================================
# PERFORMANCE SETTINGS
# ==========================================
# Particle system settings
NEXT_PUBLIC_PARTICLE_COUNT_DESKTOP=100
NEXT_PUBLIC_PARTICLE_COUNT_MOBILE=30

# 3D Model quality (high, medium, low)
NEXT_PUBLIC_MODEL_QUALITY=high

# ==========================================
# SOCIAL MEDIA (Optional)
# ==========================================
# Used for sharing and meta tags
NEXT_PUBLIC_TWITTER_HANDLE=@yourusername
NEXT_PUBLIC_INSTAGRAM_HANDLE=@yourusername

# ==========================================
# API ENDPOINTS (Optional)
# ==========================================
# If you have custom API endpoints
# NEXT_PUBLIC_API_URL=https://api.yourportfolio.com

# ==========================================
# NOTES
# ==========================================
# - NEXT_PUBLIC_ prefix makes variable available in browser
# - Without prefix, variable is only available on server
# - Never commit .env.local to version control
# - Add .env.local to .gitignore
# - Update .env.example when adding new variables
